
{
  "manifest_version": 2,

  "name": "Next PLZ",
  "description": "Move to the net page in Reddit",
  "version": "1.0",
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*"
      ],
      "js": ["src/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "src/icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}